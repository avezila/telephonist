{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "presets" : [
        ["es2015", {
          "modules": false
        }],
        "stage-0"
      ],
      "plugins": [
        ["transform-decorators-legacy"],
        ["transform-promise-to-bluebird"],
        ["transform-async-to-module-method", {
          "module" : "bluebird",
          "method" : "coroutine"
        }]
      ],
      "env": {
        "production": {
          "presets": ["react-optimize"]
        }
      }
    }
  }
}
